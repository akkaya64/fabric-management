<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.fabric</groupId>
    <artifactId>fabric-management</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Fabric Management</name>
    <description>Fabric Management Microservices Architecture</description>

    <modules>
        <module>fabric-parent</module>
        <module>libraries/fabric-java-commons</module>
        <module>libraries/fabric-java-security</module>
        <module>api-gateway</module>
        <module>auth-service</module>
        <module>java-services/user-service</module>
        <module>java-services/address-service</module>
        <module>java-services/base-person-service</module>
        <module>java-services/company-service</module>
        <module>java-services/contact-service</module>
        <module>java-services/email-service</module>
        <module>java-services/employee-service</module>
        <module>java-services/finance-service</module>
        <module>java-services/mail-service</module>
        <module>java-services/performance-service</module>
        <module>java-services/phone-service</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.4.1</version>
                <executions>
                    <execution>
                        <id>enforce-maven</id>
                        <goals>
                            <goal>enforce</goal>
                        </goals>
                        <configuration>
                            <rules>
                                <requireMavenVersion>
                                    <version>3.8.0</version>
                                </requireMavenVersion>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>